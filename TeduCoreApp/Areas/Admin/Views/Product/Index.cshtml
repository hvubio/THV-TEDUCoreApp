@section Script
    {

    <script src="~/app/controller/product/index.js"></script>
    <script>
        var product = new productController();
        product.initialize();
    </script>
}

<div class="page-title">
    <div class="title_left">
        <h3>Product <small>Product Manament</small></h3>
    </div>

    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">Go!</button>
                </span>
            </div>
        </div>
    </div>
</div>

<div class="clearfix"></div>

<div class="row">

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>List Product <small>All Product List Below</small></h2>
                <ul class="nav navbar-right panel-default">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Category Name</th>
                            <th>Price</th>
                            <th>Image</th>
                            <th>CreatedDate</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="tbl-content"></tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <script id="table-template" type="x-tmpl-mustache">
        <tr>
            <th width="10%">
                <button class="btn btn-default btn-sm"><i class="fa fa-pencil"></i></button>
                <button class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
            </th>
            <td>{{Name}}</td>
            <td>{{CategoryName}}</td>
            <td>{{{Price}}}</td>
            <td>{{{Image}}}</td>
            <td>{{CreatedDate}}</td>
            <td>{{{Status}}}</td>
        </tr>
    </script>
</div>